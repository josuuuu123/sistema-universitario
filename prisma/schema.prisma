generator client {
  provider = "prisma-client-js"
  output   = "../generated/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================
// MODELOS UNIVERSIDAD
// =============================

model Carrera {
  id          Int          @id @default(autoincrement())
  nombre      String
  estudiantes Estudiante[]
  materias    Materia[]
}

model Ciclo {
  id          Int          @id @default(autoincrement())
  nombre      String
  estudiantes Estudiante[]
  materias    Materia[]
}

model Especialidad {
  id       Int       @id @default(autoincrement())
  nombre   String
  docentes Docente[]
}

model Docente {
  id              Int              @id @default(autoincrement())
  nombre          String
  especialidadId  Int?
  especialidad    Especialidad?    @relation(fields: [especialidadId], references: [id])
  materias        MateriaDocente[]
}

model Estudiante {
  id         Int                @id @default(autoincrement())
  nombre     String
  carreraId  Int
  cicloId    Int
  carrera    Carrera            @relation(fields: [carreraId], references: [id])
  ciclo      Ciclo              @relation(fields: [cicloId], references: [id])
  materias   EstudianteMateria[]
}

model Materia {
  id          Int                @id @default(autoincrement())
  nombre      String
  carreraId   Int
  cicloId     Int
  carrera     Carrera            @relation(fields: [carreraId], references: [id])
  ciclo       Ciclo              @relation(fields: [cicloId], references: [id])
  estudiantes EstudianteMateria[]
  docentes    MateriaDocente[]
}

model EstudianteMateria {
  id           Int        @id @default(autoincrement())
  estudianteId Int
  materiaId    Int
  estudiante   Estudiante @relation(fields: [estudianteId], references: [id])
  materia      Materia    @relation(fields: [materiaId], references: [id])

  @@unique([estudianteId, materiaId])
}

model MateriaDocente {
  id        Int      @id @default(autoincrement())
  docenteId Int
  materiaId Int
  docente   Docente  @relation(fields: [docenteId], references: [id])
  materia   Materia  @relation(fields: [materiaId], references: [id])

  @@unique([docenteId, materiaId])
}
